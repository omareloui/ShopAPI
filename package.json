{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/server",
    "dev": "cross-env NODE_ENV=development nodemon -w src src/server.ts | pino-pretty -t \"yyyy-mm-dd HH:MM:ss.l\" -i pid,hostname",
    "build": "rimraf dist && tsc",
    "migrate:create": "db-migrate create",
    "migrate": "db-migrate up && db-migrate up -e test",
    "test": "cross-env NODE_ENV=test jasmine-ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:check": "eslint --print-config .eslintrc",
    "format": "prettier ./{src,public}/**/*.{[jt]s,css,json} --write"
  },
  "author": "Omar Eloui <omareloui@hotmail.com>",
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "^4.17.1",
    "helmet": "^5.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "pino": "^7.11.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.3.1",
    "@types/express": "^4.17.9",
    "@types/jasmine": "^3.6.3",
    "@types/morgan": "^1.9.3",
    "@types/pg": "^7.14.7",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "eslint": "^8.15.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "jasmine": "^3.6.4",
    "jasmine-spec-reporter": "^6.0.0",
    "jasmine-ts": "^0.4.0",
    "nodemon": "^2.0.16",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.6.4"
  }
}
